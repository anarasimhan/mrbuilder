{
  "name": "example-multi-app",
  "version": "0.4.0",
  "private": true,
  "devDependencies": {
    "mrbuilder": "^0.4.0",
    "mrbuilder-plugin-chunk": "^0.4.0"
  },
  "scripts": {
    "clean": "mrbuilder-clean app",
    "start": "mrbuilder-webpack-dev-server",
    "prepublish": "mrbuilder-webpack --app app"
  },
  "mrbuilder": {
    "plugins": [
      [
        "mrbuilder-plugin-webpack",
        {
          "app": "app",
          "entry": {
            "index": "public/index",
            "other": "public/other"
          }
        }
      ],
      [
        "mrbuilder-plugin-webpack-dev-server",
        {
          "rewrite": {
            "/frown.:ext":"/smile.{ext}"
          },
          "socketTimeout":5000
        }
      ],
      "mrbuilder-plugin-chunk",
      [
        "mrbuilder-plugin-html",
        {
          "pages": {
            "index": {
              "title": "Index"
            },
            "other": {
              "title": "Other"
            }
          }
        }
      ]
    ],
    "presets": [
      "mrbuilder"
    ]
  }
}
