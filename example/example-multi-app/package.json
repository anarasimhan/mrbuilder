{
  "name": "example-multi-app",
  "version": "0.7.0",
  "private": true,
  "devDependencies": {
    "mrbuilder": "^0.7.0",
    "mrbuilder-preset-app": "^0.7.0"
  },
  "scripts": {
    "clean": "mrbuilder-clean app",
    "start": "mrbuilder-webpack-dev-server",
    "prepublish": "NODE_ENV=production mrbuilder-webpack"
  },
  "mrbuilder": {
    "presets": [
      "mrbuilder",
      "mrbuilder-preset-app"
    ],
    "plugins": [
      "mrbuilder-plugin-babel",
      [
        "mrbuilder-plugin-webpack",
        {
          "app": "app",
          "entry": {
            "index": "public/index",
            "other": "public/other"
          }
        }
      ],
      [
        "mrbuilder-plugin-html",
        {
          "pages": {
            "index": {
              "title": "Index"
            },
            "other": {
              "title": "Other",
              "exported": true
            }
          }
        }
      ]
    ],
    "env": {
      "development": {
        "plugins": [
          [
            "mrbuilder-plugin-webpack-dev-server",
            {
              "rewrite": {
                "/frown.:ext": "/smile.{ext}"
              },
              "socketTimeout": 5000
            }
          ],
          "mrbuilder-plugin-hot"
        ]
      }
    }
  }
}
