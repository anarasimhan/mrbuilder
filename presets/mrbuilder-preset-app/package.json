{
  "name": "mrbuilder-preset-app",
  "version": "2.0.0",
  "dependencies": {
    "mrbuilder-plugin-babel": "^2.0.0",
    "mrbuilder-plugin-browserslist": "^2.0.0",
    "mrbuilder-plugin-chunk": "^2.0.0",
    "mrbuilder-plugin-css": "^2.0.0",
    "mrbuilder-plugin-env": "^2.0.0",
    "mrbuilder-plugin-filetypes": "^2.0.0",
    "mrbuilder-plugin-fonts": "^2.0.0",
    "mrbuilder-plugin-hot": "^2.0.0",
    "mrbuilder-plugin-html": "^2.0.0",
    "mrbuilder-plugin-less": "^2.0.0",
    "mrbuilder-plugin-uglify": "^2.0.0",
    "mrbuilder-plugin-webpack": "^2.0.0",
    "mrbuilder-plugin-webpack-dev-server": "^2.0.0"
  },
  "peerDependencies": {
    "mrbuilder": "2.x"
  },
  "mrbuilder": {
    "plugins": [
      "mrbuilder-plugin-babel",
      "mrbuilder-plugin-browserslist",
      "mrbuilder-plugin-filetypes",
      "mrbuilder-plugin-fonts",
      "mrbuilder-plugin-env",
      [
        "mrbuilder-plugin-html",
        {
          "exported": true
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          "mrbuilder-preset-test"
        ],
        "plugins": [
          [
            "mrbuilder-plugin-html",
            false
          ]
        ]
      },
      "development": {
        "plugins": [
          [
            "mrbuilder-plugin-css",
            {
              "useNameHash": "css/[name].css"
            }
          ],
          "mrbuilder-plugin-less",
          "mrbuilder-plugin-html",
          "mrbuilder-plugin-webpack-dev-server",
          "mrbuilder-plugin-hot"
        ]
      },
      "production": {
        "plugins": [
          [
            "mrbuilder-plugin-css",
            {
              "useNameHash": "css/[name].[hash].css"
            }
          ],
          "mrbuilder-plugin-less",
          [
            "mrbuilder-plugin-webpack",
            {
              "app": "app",
              "filename": "js/[name].[hash].js",
              "externalizePeers": false
            }
          ],
          [
            "mrbuilder-plugin-chunk",
            {
              "filename": "js/[name].[hash].js"
            }
          ],
          "mrbuilder-plugin-uglify"
        ]
      }
    }
  },
  "license": "0BSD"
}
